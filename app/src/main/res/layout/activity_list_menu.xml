<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/root_detail"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/Detail_gambar_makanan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/Detail_nama_makanan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/Detail_nama_makanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayam Goreng"
            android:textStyle="bold"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@id/Detail_gambar_makanan"
            app:layout_constraintEnd_toStartOf="@id/Detail_harga_makanan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/Detail_harga_makanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="130.000"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/Detail_nama_makanan"
            app:layout_constraintTop_toTopOf="parent"
            />
        <LinearLayout
            android:id="@+id/cont_tambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Detail_nama_makanan"
            app:layout_constraintStart_toStartOf="@id/Detail_gambar_makanan"
            app:layout_constraintEnd_toEndOf="@id/Detail_harga_makanan"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/kurang"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/kurang"/>
            <TextView
                android:id="@+id/jumlah"
                android:gravity="center"
                android:textSize="20dp"
                android:text="0"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/tambah"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tambah"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>