<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Halaman_transaksi">
    <LinearLayout
        android:id="@+id/nav_transaksi"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9978fb5c"
        >
        <TextView
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:paddingStart="20dp"
            style="@style/Text.Title"
            android:text="Transaction"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_transaksi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/nav_transaksi"
        app:layout_constraintBottom_toTopOf="@+id/nav_bawah">
        <LinearLayout
            android:id="@+id/scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdad"
                android:textSize="50dp"/>
            <TextView
                android:layout_width="match_parent"
