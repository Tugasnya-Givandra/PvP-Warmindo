                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdad"
                android:textSize="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdad"
                android:textSize="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdad"
                android:textSize="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdad"
                android:textSize="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdad"
                android:textSize="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdad"
                android:textSize="50dp"/>
            <TextView
                android:layout_width="match_parent"
